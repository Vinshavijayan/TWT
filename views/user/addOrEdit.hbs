<h3>{{viewTitle}}</h3>

<form action="/user" method="POST" autocomplete="off">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="Name" placeholder="Name" value="{{user.Name}}">
        <div class="text-danger">{{user.NameError}}</div>
    </div>
     <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="Address" placeholder="Address" value="{{user.Address}}">
    <div class="text-danger">{{user.AddressError}}</div>
    </div>
     <div class="form-group">
        <label>Age</label>
        <input type="text" class="form-control" name="Age" placeholder="Age" value="{{user.Age}}">
        <div class="text-danger">{{user.AgeError}}</div>

    </div>
    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" name="Username" placeholder="Username" value="{{user.Username}}">
        <div class="text-danger">{{user.UsernameError}}</div>

    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="Password" placeholder="Password" value="{{user.Password}}">
        <div class="text-danger">{{user.PasswordError}}</div>

    </div>
    <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
    <a class="btn btn-secondary" href="/user/list"><i class="fa fa-list-alt"></i>View All</a>
</form>